<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">img.youtube.com</domain>
        <!-- You might need to add other domains if images come from elsewhere -->
        <!-- <domain includeSubdomains="true">another.domain.com</domain> -->
    </domain-config>
    <!-- Add base-config if you need default rules for other domains -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config> 