{
  "info": {
    "_postman_id": "rcs-testing-collection",
    "name": "RCS Application Testing",
    "description": "Test collection for RCS messaging application",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Basic Messages",
      "item": [
        {
          "name": "Send Text Message",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "pm.variables.set('messageId', pm.variables.replaceIn('{{$guid}}'));",
                  "pm.variables.set('timestamp', Math.floor(Date.now() / 1000));"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response time is less than 2000ms', function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(2000);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"49804\",\n  \"messageId\": \"{{messageId}}\",\n  \"messageText\": \"Hello from Postman at {{$timestamp}}\",\n  \"messageTime\": {{timestamp}},\n  \"eventTypeCode\": 1,\n  \"fcmToken\": \"eLjQWERyTm2Kltsqxahvw6:APA91bFqgowOQxoeOpZuf9wMsUQczuxBBZZim_yo-r_j9H_SMKqU4HLuioUUgI028IRpUG5SObBY3Fp4HiJIkTNsLkrKPEgWEo2UWVvMa81mPIVdM0WEuV0\"\n}"
            },
            "url": {
              "raw": "https://dashmessaging-com.ngrok.io/scheduler/mobile-app",
              "protocol": "https",
              "host": [
                "dashmessaging-com",
                "ngrok",
                "io"
              ],
              "path": [
                "scheduler",
                "mobile-app"
              ]
            }
          }
        },
